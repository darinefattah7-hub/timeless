<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;1,400&display=swap" rel="stylesheet">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;1,400&display=swap" rel="stylesheet">
    <script src="script.js"></script>
   <link rel="stylesheet" href="/homepage.css" />
<link rel="stylesheet" href="/responsive.css" />
       <link rel="stylesheet" href="/subpages.css" />


</head>
<body>
 <% if (role === 'admin') { %>
  <%- include('includes/adminDashboard.ejs') %>
<% } else { %>
  <%- include('includes/header.ejs') %>
<% } %>

<div class="wishlist-page">

  <h1 class="wishlist-title"><%= pageTitle %></h1>

  <% if (product.length === 0) { %>
    <p class="wishlist-empty">Your wishlist is empty.</p>

  <% } else { %>

    <div class="wishlist-grid">

      <% product.forEach(item => { %>
        <div class="wishlist-card united-card">

          <img 
            src="/images/<%= item.imageGold || item.imageSilver || item.imageRoseGold %>"
            alt="<%= item.name %>"
            class="wishlist-img"
          >

          <h3 class="wishlist-name"><%= item.name %></h3>
          <p class="wishlist-desc"><%= item.description %></p>

          <div class="wishlist-bottom">

            <div class="wishlist-price">$<%= item.price.toFixed(2) %></div>

            <form action="/user/wishlist/remove/<%= item.ID %>" method="POST">
              <button type="submit" class="btn-united-outline small-btn">Remove</button>
            </form>

            <% if (isAuthenticated) { %>
              <form action="/user/cart/add/<%= item.ID %>" method="POST">
                <button type="submit" class="btn-united small-btn">Add to Cart</button>
              </form>
            <% } else { %>
              <a href="/auth/login" class="btn-united small-btn">Login</a>
            <% } %>

          </div>
        </div>
      <% }) %>

    </div>

  <% } %>

</div>

    <%- include('includes/footer.ejs') %>
</body>
</html>   
                    







