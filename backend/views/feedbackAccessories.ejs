 <% if (role === 'admin') { %>
  <%- include('includes/adminDashboard.ejs') %>
<% } else { %>
  <%- include('includes/header.ejs') %>
<% } %>

<div class="united-form">
  <h2>Accessories Feedback</h2>

  <% if (isAuthenticated) { %>

  <form action="/user/addfeedbackAccessories" method="post">

    <div class="form-group">
      <label>How satisfied are you with the quality?</label>
      <textarea name="accessories-quality" rows="3"  placeholder="Your Feedback" required></textarea>
    </div>

    <div class="form-group">
      <label>Would you recommend our accessories?</label>
      <div class="radio-group">
        <label><input type="radio" name="accessories-recommend" value="Yes" required> Yes</label>
        <label><input type="radio" name="accessories-recommend" value="No" required> No</label>
      </div>
    </div>

    <div class="form-group">
      <label>Do the accessories function well?</label>
      <div class="radio-group">
        <label><input type="radio" name="accessories-functionality" value="Yes" required> Yes</label>
        <label><input type="radio" name="accessories-functionality" value="No" required> No</label>
      </div>
    </div>

    <div class="form-group">
      <label>Design Rating</label>
      <select name="accessories-design" required>
        <option value="" disabled selected>Select</option>
        <option>1</option><option>2</option><option>3</option><option>4</option><option>5</option>
      </select>
    </div>

    <div class="form-group">
      <label>Value for money</label>
      <select name="accessories-value" required>
        <option value="" disabled selected>Select</option>
        <option>1</option><option>2</option><option>3</option><option>4</option><option>5</option>
      </select>
    </div>

    <button type="submit">Submit Feedback</button>
  </form>

  <% } else { %>
    <p style="text-align:center;">Please <a href="/auth/login"><b>log in</b></a> to leave feedback.</p>
  <% } %>
</div>

