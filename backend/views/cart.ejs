<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>

    <!-- Fonts + CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/homepage.css">
    <link rel="stylesheet" href="/responsive.css">
    <link rel="stylesheet" href="/subpages.css">
    <link rel="stylesheet" href="/cart.css">   <!-- CART CSS FILE -->
</head>

<body>

<% if (role === 'admin') { %>
  <%- include('includes/adminDashboard.ejs') %>
<% } else { %>
  <%- include('includes/header.ejs') %>
<% } %>

<main class="cart-wrap">

    <h1>Your Shopping Cart</h1>

    <% const items = product || []; %>

    <% if (items.length === 0) { %>

      <p class="empty">Your cart is empty.</p>

    <% } else { %>

      <table class="cart">
        <thead>
          <tr>
            <th style="width:42%;">Product</th>
            <th class="right">Price</th>
            <th class="right">Qty</th>
            <th class="right">Subtotal</th>
            <th class="right">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% let grandTotal = 0; %>

          <% items.forEach((item) => { 
              const unit = Number(item.price) || 0;
              const qty  = Number(item.quantity) || 0;
              const line = unit * qty;
              grandTotal += line;
          %>

          <tr>

            <!-- PRODUCT + IMAGE -->
            <td>
              <div style="display:flex; align-items:center;">
                <img src="/images/<%= item.imageGold || item.imageSilver || item.imageRoseGold %>"
                     alt="<%= item.name %>"
                     class="item-image">
                <div class="product-info">
                  <strong><%= item.name %></strong>
                  
                </div>
              </div>
            </td>

            <td class="right">$<%= unit.toFixed(2) %></td>

            <!-- UPDATE QUANTITY -->
           <td class="right">
  <form action="/user/cart/update/<%= item.productID %>" method="POST" class="qty-form">
    <input type="number" name="quantity" class="qty-input" min="1" value="<%= qty %>">
    <button class="btn-united-outline qty-btn" type="submit">OK</button>
  </form>
</td>


            <td class="right">$<%= line.toFixed(2) %></td>

            <!-- REMOVE -->
            <td class="right">
              <form action="/user/cart/remove/<%= item.productID %>" method="POST" style="display:inline;">
                <button class="btn-united" type="submit">Remove</button>
              </form>
            </td>

          </tr>

          <% }) %>

        </tbody>
      </table>

      <div class="totals">
        Total: $<%= grandTotal.toFixed(2) %>
      </div>

      <div style="text-align: right; margin-top: 18px;">
        <form action="/user/cart/clear" method="POST" style="display:inline;">
          <button class="btn-united" type="submit" style="padding:10px 18px;">
            Checkout
          </button>
        </form>
      </div>

    <% } %>

    <% if (errorMessage) { %>
      <p style="color:#b33; margin-top:14px; text-align:center;"><%= errorMessage %></p>
    <% } %>

</main>

<%- include('includes/footer.ejs') %>

</body>
</html>
